<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.domain.mapper.blog.BlogQueryMapper">


    <select id="findBlogByUserId" parameterType="String" resultType="com.study.domain.blog.entity.Blog">
        SELECT * FROM blog WHERE userId = #{userId}
    </select>

    <select id="findBlogByBlogId" parameterType="long" resultType="com.study.domain.blog.entity.Blog">
        SELECT * FROM blog WHERE id = #{blogId}
    </select>
    
</mapper>