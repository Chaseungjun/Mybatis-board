<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.domain.mapper.blog.BlogCommandMapper">

    <insert id="save" parameterType="com.study.domain.blog.entity.Blog" useGeneratedKeys="true" keyProperty="id">
        insert into blog (userId)
        values (#{userId})
    </insert>

    <update id="withdraw" parameterType="com.study.domain.blog.entity.Blog">
        UPDATE blog SET deleted_at = NOW() WHERE userId = #{blog.userId}
    </update>
</mapper>